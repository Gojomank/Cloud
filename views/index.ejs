<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="/css/style.css">
        <title>Star Wars Quote App</title>
    </head>

    <body>
        <h1>CREATE PRODUCT</h1>
        
        <!-- (1): CREATE Task -->         
        <!-- --> 
        <form action="/quotes" method="POST">   
            <input style="width: 200px; height: 25px; margin-bottom: 5px;" type="text" placeholder="name" name="name" /> <br>       
            <input style="width: 200px; height: 25px; margin-bottom: 5px;" type="file" name="image" id="image"> <br>
            <input style="width: 200px; height: 25px; margin-bottom: 5px;" type="number" name="price" id="price"> <br>
            <textarea name="description" id="description" cols="30" rows="10"></textarea> <br>
            <button type="submit">Submit</button>
        </form>
        <!-- -->                               

        <!-- (2) READ Task -->                        
        <h2> ALL PRODUCT </h2>
        <ul class="quotes">
            <!-- Loop through quotes -->
            <table>
                    <tr>
                        <th>NAME</th>
                        <th>IMAGE</th>
                        <th>PRICE</th>
                        <th>DESCRIPTION</th>
                    </tr>
                    <% for(var i = 0; i < quotes.length; i++) {%>
                    <tr>
                            <td><%= quotes[i].name %></td>
                            <td><img src="/img/<%= quotes[i].image %>" style="width: 100px; height: 100px;"></td>
                            <td><%= quotes[i].price %></td>
                            <td><%= quotes[i].description %></td>
                    </tr>
                        <% } %>
                </table>
        </ul>    
    </body>
</html>